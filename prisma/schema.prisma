// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Property {
  id           String   @id @default(uuid())
  title        String
  description  String
  price        Float
  location     String
  area         String   // Neighborhood/area for filtering
  bedrooms     Int
  bathrooms    Int
  propertyType String   // Plot, House, Flat, Rental
  status       String   @default("AVAILABLE") // AVAILABLE, SOLD
  size         Float?   // Total size in sq ft (can be auto-calculated from front * back)
  frontSize    Float?   // Front dimension
  backSize     Float?   // Back dimension
  images       String[]
  ownerName    String?
  ownerPhone   String?
  leads        Lead[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Lead {
  id         String    @id @default(uuid())
  name       String
  phone      String
  purpose    String    // Buy, Rent, Sell, General Inquiry
  notes      String?
  status     String    @default("NEW") // NEW, CONTACTED, INTERESTED, CONVERTED, LOST
  propertyId String?
  property   Property? @relation(fields: [propertyId], references: [id])
  reminder   Reminder?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Reminder {
  id          String   @id @default(uuid())
  leadId      String   @unique
  lead        Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  scheduledAt DateTime
  sent        Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([scheduledAt, sent])
}

model ServiceCategory {
  id              String        @id @default(cuid())
  name            String
  slug            String        @unique
  description     String?
  displayOrder    Int
  isActive        Boolean       @default(true)
  metaTitle       String?
  metaDescription String?
  coverImageUrl   String?
  galleryItems    GalleryItem[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([slug])
  @@index([displayOrder, isActive])
}

model GalleryItem {
  id                 String          @id @default(cuid())
  categoryId         String
  category           ServiceCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  title              String
  description        String?
  imageUrl           String
  imageThumbnailUrl  String?
  imageAltText       String?
  displayOrder       Int
  isActive           Boolean         @default(true)
  projectName        String          // Required - all images must belong to a project
  projectLocation    String?
  completionDate     DateTime?
  tags               String[]
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt

  @@index([categoryId, isActive, displayOrder])
  @@index([categoryId, projectName])  // Index for project grouping
  @@index([createdAt])
}

