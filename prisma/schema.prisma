// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Property {
  id           String   @id @default(uuid())
  title        String
  description  String
  price        Float
  location     String
  area         String   // Neighborhood/area for filtering
  bedrooms     Int
  bathrooms    Int
  propertyType String   // Plot, House, Flat, Rental
  status       String   @default("AVAILABLE") // AVAILABLE, SOLD
  size         Float?   // Total size in sq ft (can be auto-calculated from front * back)
  frontSize    Float?   // Front dimension
  backSize     Float?   // Back dimension
  images       String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
